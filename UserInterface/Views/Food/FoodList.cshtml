@model LoginTredMarktViewModel
@{
    ViewData["Title"] = "FoodList";
}
<header>
    <div>
        @await Html.PartialAsync("_HeaderPartial", Model.WelcomTredmarketFood)
    </div>
</header>

<div class="card shadow border-0 my-4">
    <div class="card-header bg-navbar bf-bb bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="fnt-blue py-2"> قائمة المواد الغذائية </h2>
            </div>
        </div>
    </div>


    <div class="card-body p-4">

        <table class="table table-style1 table-bordered table-striped py-5 mb-3 pb-4" id="tblFood" style="width:100%">
            <thead data-id="@TempData["ID"]">

                <tr class=" py-5 mb-3 pb-4">
                    <th style="text-align:center ;font-size:medium">
                      اسم المادة الغذائية
                    </th>
                    <th style="text-align:center ;font-size:medium">
                      صورة المادة الغذائية 
                    </th>
                    <th class="bg-grey">
                        <div class="row pb-3">
                        </div>

                        <div style="text-align:center">
                            <div style="text-align:center">
                                <button type="button" class="btn btn-style2 px-4 add-button"
                                        data-toggle="modal"
                                        data-target="#CreateFoods"
                                        data-controller="Food"
                                        data-action="CreateFood"
                                        data-id="@TempData["ID"]">
                                    <i class="bi bi-plus-circle"></i>
                                </button>
                            </div>

                        </div>
                        <a class="nav-link fnt-blue" href="@Url.Action("PrintFoodStuffs", "Food", new { brandFK = Model.WelcomTredmarketFood.FoodLoginVM.BrandFK })">طباعة</a>
                    </th>

                </tr>
            </thead>
           
        </table>
    </div>
    

</div>


@section Scripts {

    <script src="~/Js/Foodjs/FoodDeletelist.js"></script>
    <script src="~/Js/Foodjs/AdddeleteFoods.js"></script>
}
