@model CleanVM

@{
    ViewData["Title"] = "CleanList";
}

<header>
    <div>
        @await Html.PartialAsync("_HeaderPartial", Model.WelcomTredMarketClean)
    </div>
</header>

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> قائمة التنظيف</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">

        <table class="table table-bordered table-striped py-5 mb-3 pb-4" id="tblDataClean" style="width:100%">
            <thead data-id="@TempData["ID"]">
                <tr class=" py-5 mb-3 pb-4">
                    <th style="text-align:center ;font-size:medium">
                       اسم جهاز التنظيف 
                    </th>
 
                    <th>
                        <div class="row pb-3">
                        </div>
                        <div style="text-align:center">
                            <div style="text-align:center">
                                <a asp-controller="Clean" asp-action="CreateClean" asp-route-id="@TempData["ID"]" name="AddButtonItem" class=" btn btn-primary px-4 add-button">
                                    <i class="bi bi-plus-circle"></i>
                                </a>
                            </div>

                        </div>
                    </th>

                </tr>
            </thead>
        </table>
    </div>
</div>


@section Scripts {

    <script src="~/Js/Clean/Deletelist3.js"></script>
    <script src="~/Js/Clean/AddDLTsteps3.js"></script>
}
