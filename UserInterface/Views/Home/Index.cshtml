
 
@model LoginTredMarktViewModel // Replace with your actual model class


<div class="card shadow border-0 mt-4">
    <div class="card-header  bg-primary mb-3  ml-0 py-4 custom-dark-bg ">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2 text-white">تسجيل الدخول</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row">
            <div class="col-md-12">
                <section>
                    <form id="account" method="post" enctype="multipart/form-data">

                        <input asp-for="LoginVM.Login_ID" hidden />
                        <input asp-for="LoginVM.BrandFK " hidden />

                        <h3 class="border-bottom pb-3 mb-4 text-secondary text-center">

                        </h3>
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating mb-3">
                            <label asp-for="LoginVM.Username" class="form-label" >اسم المستخدم </label>
                            <input asp-for="LoginVM.Username" class="form-control" />
                            <span asp-validation-for="LoginVM.Username" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for=" LoginVM.Password" class="form-control" placeholder="كلمة المرور " />
                            <label asp-for=" LoginVM.Password" class="form-label">كلمة المرور</label>
                            <span asp-validation-for=" LoginVM.Password" class="text-danger"></span>
                        </div>
                       
                        <div>
                            <p>
                                <a asp-controller="Forget" asp-action="ForgetPassword">هل نسيت كلمة المرور ؟</a>
                            </p>
                        </div>

                        <div>
                            <button id="login-submit" asp-controller="Home" asp-action="Index" type="submit" class="w-100 btn btn-lg btn-primary">تسجيل الدخول</button>
                        </div>

                    </form>
                </section>
            </div>
        </div>
    </div>
</div>






